{ 
    "manifest_version": 3,
    "name": "YouTube Transcript Summariser",
    "description": "An extension to summarize YouTube videos using the transcript, connecting to a local Python backend.",
    "version": "1.1",
    "permissions": ["activeTab"],
    "host_permissions": ["http://127.0.0.1:5000/*"],
    
    "action": {
        "default_title": "Summarise YouTube Video",
        "default_icon": {
            "16": "images/icon.png",
            "32": "images/icon.png",
            "48": "images/icon.png",
            "128": "images/icon.png"
        },
        "default_popup": "popup.html"
    },

    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    
    "web_accessible_resources": [
        {
            "resources": ["images/icon.png"],
            "matches": ["<all_urls>"]
        }
    ]
}
